mixin card(header,type="patient",button)
    .card 
        .card__header
            if type == "login"
                img.card__logo(src="./assets/logo.png", alt="Traumato Logo")
                h3.card__brand Traumato
                p.card__desc enterer votre username et mot de passe
            else 
                h3.card__title= header
            span.card__close &times;
        .card__form
            form.form
                if type == "login"
                    fieldset.form__fieldset
                        legend.form__legend Type de Compte
                        input.form__input(type="Checkbox", id="medecin", name="type", value="medecin")
                        label.form__label(for="medecin") Medecin
                        input.form__input(type="Checkbox", id="admin", name="type", value="admin")
                        label.form__label(for="admin") Admin
                    .form__group
                        label.form__label(for="username") Username 
                        input.form__group__input(type="text" id="username" name="username" required)
                    .form__group
                        label.form__label(for="password") Password
                        input.form__input(type="password" id="password" name="password" required)
                    .form__group
                        label.form__label(for="twofa") Code Securité 2FA
                        input.form__input(type="password" id="twofa" name="twofa" required)
                    button.btn.btn--primary(type="button")
                        span.btn__text Log in
                else
                    if type == "contact"
                        .form__left
                            .form__group
                                label.form__label(for="nom") Nom Complete *
                                input.form__input(type="text" id="nom" name="nom" required)
                            .form__group
                                label.form__label(for="email") Email *
                                input.form__input(type="email" id="email" name="email" required)
                        .form__rigth
                            .form__group
                                label.form__label(for="tele") Message *
                                textarea.form__textarea(name="message", id="message", cols="30", rows="10" required)
                    else  
                        .form__group--half
                            label.form__label(for="nom") Nom *
                            input.form__input(type="text" id="nom" name="nom" required)
                        .form__group--half
                            label.form__label(for="prenom") Prénom *
                            input.form__input(type="text" id="prenom" name="prenom" required)
                        .form__group
                            label.form__label(for="tele") Téléphone *
                            input.form__input(type="text" id="tele" name="tele" required)
                        .form__group
                            label.form__label(for="email") Email *
                            input.form__input(type="email" id="email" name="email" required)
                        .form__group
                            label.form__label(for="date") Date de Naissance *
                            input.form__input(type="date" id="date" name="dn" required)
                    if type == "patient"
                        .form__group
                            label.form__label(for="maladie") Maladie *
                            select.form__select(id="maladie" name="maladie" required) 
                                option(value="tspt") TSPT
                                option(value="camh") CAMH
                                option(value="spt") SPT
                                option(value="autre") Autre
                        .form__group
                            label.form__label(for="rdv") Date de Rendez-vous *
                            input.form__input(type="date" id="rdv" name="rdv" required)
                    else if type == "medecin"
                        .form__group
                            label.form__label(for="specialite") Specialité *
                            select.form__select(id="specialite" name="specialite" required) 
                                option(value="tspt") TSPT
                                option(value="camh") CAMH
                                option(value="spt") SPT
                                option(value="autre") Autre
                    button.btn.btn--primary(type="submit")
                        span.btn__text= button