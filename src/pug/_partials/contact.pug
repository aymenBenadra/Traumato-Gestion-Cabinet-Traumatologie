section#contact.contact
    .contact__header
        h2.contact__title Get in Touch
        p.contact__desc The gradual accumulation of information about atomic and small-scale behaviour during the first quarter of the 20th century
    .contact__form
        .card
        .card__header
            h3.card__title Contactez nous
        .card__form
            form.form
                // Contact form
                .form__left
                    .form__group
                        label.form__label(for="nom") Nom Complete *
                        input.form__input(type="text" id="nom" name="nom" required)
                    .form__group
                        label.form__label(for="email") Email *
                        input.form__input(type="email" id="email" name="email" required)
                .form__right
                    .form__group
                        label.form__label(for="message") Message *
                        textarea.form__textarea(name="message", id="message", cols="30", rows="10" required)
                button.btn.btn--primary(type="submit")
                    span.btn__text Envoyer

block scripts
    script(src="./assets/js/contact.js")